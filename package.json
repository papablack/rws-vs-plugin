{
  "name": "rws-html-templates",
  "displayName": "RWS HTML templates",
  "description": "Code hinting for RWS Framework HTML templates (webpack loaded Microsoft Fast Elements from .html files)",
  "author": "Papa Black",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.2"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "rws-html",
        "aliases": [
          "RWS HTML Template",
          "rws-html"
        ],
        "extensions": [
          ".html"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rws-html",
        "scopeName": "text.html.noattr",
        "path": "./syntaxes/mod-html.tmLanguage.json"
      },
      {
        "language": "rws-html",
        "scopeName": "source.rws-html",
        "path": "./syntaxes/rws-html.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "RWS server configuration",
      "properties": {
        "rwsLanguageServer.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "rwsLanguageServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "verbose",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.86.2",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@microsoft/fast-element": "^1.12.0",
    "@types/dragula": "^3.7.4",
    "acorn": "^8.11.3",
    "dragula": "^3.7.3",
    "json5": "^2.2.3",
    "parse5": "^7.1.2",
    "ts-node": "^10.9.2",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "activationEvents": []
}
